<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  This is our one standard application action (creating a new note). -->
    <item android:id="@+id/menu_add"
          android:icon="@drawable/ic_menu_compose"
          android:title="@string/menu_add"
          android:alphabeticShortcut='a'
          android:showAsAction="always" />
    
    <!-- Search item -->
    <item android:id="@+id/menu_search"
          android:icon="@android:drawable/ic_menu_search"
          android:title="搜索"
          android:showAsAction="ifRoom|collapseActionView"
          android:actionViewClass="android.widget.SearchView" />
    
    <!--  If there is currently data in the clipboard, this adds a PASTE menu item to the menu
          so that the user can paste in the data.. -->
    <item android:id="@+id/menu_paste"
          android:icon="@drawable/ic_menu_compose"
          android:title="@string/menu_paste"
          android:alphabeticShortcut='p' />
    
    <!-- Export and Import menu items -->
    <item android:id="@+id/menu_export"
          android:title="@string/menu_export"
          android:alphabeticShortcut='e' />
    
    <item android:id="@+id/menu_import"
          android:title="@string/menu_import"
          android:alphabeticShortcut='i' />
    
    <!-- Filter menu items -->
    <item android:id="@+id/menu_show_all"
          android:title="显示全部" />
    
    <item android:id="@+id/menu_show_todo"
          android:title="仅显示代办" />
    
    <item android:id="@+id/menu_show_normal"
          android:title="仅显示普通笔记" />
</menu>